<html>
  <% include header %>

  <body ng-app="gameCatagories" ng-controller="appController">
    <div class="container-fluid">
      <div class="row" style="margin-top: 100px">
        <div class="col-sm-offset-3 col-sm-6">
          <div role="form">
            <div class="form-group input-group">
                <h4><%= item.title %></h4>
                <h4><i class="fa fa-dollar"></i> <%= item.price %></h4>
            </div>

            <div class="form-group">
              <button class="btn btn-primary" ng-click="chooseGame()">Buy one and win one!</button>
            </div>
          </div>
          <div class="alert alert-info" role="alert">You don't need to pay anthing here lol</div>
        </div>
      </div>
    </div>
  </body>

</html>
